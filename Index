                <input type="password" class="api-input" id="apiKeyInput" placeholder="GEMINI_API_KEY">
                <button class="connect-btn" id="connectBtn">Connect DJ</button>
                <p class="api-hint">Get your free API key from: ai.google.dev</p>
            </div>

            <div id="chatSection" class="hidden">
                <div class="chat-messages" id="chatMessages">
                    <div class="message assistant">ðŸŽ‰ Hey! I'm your AI DJ! Ask me about music or chat while you listen! ðŸŽµ</div>
                </div>
                <div class="chat-input-section">
                    <input type="text" class="chat-input" id="chatInput" placeholder="Ask your DJ...">
                    <button class="send-btn" id="sendBtn">
                        <i data-lucide="send" width="20" height="20" stroke="white"></i>
                    </button>
                </div>
            </div>
        </div>

        <audio id="audioPlayer" preload="none"></audio>
    </div>

    <script>
        // Initialize Lucide icons
        lucide.createIcons();

        const channels = [
            { id: 1, name: 'EDM', genre: 'Electronic Dance Music', stream: 'https://stream.zeno.fm/f3wvbbqmdg8uv' },
            { id: 2, name: 'Afro House', genre: 'Afro House Beats', stream: 'https://stream.zeno.fm/8ep58wtwrg8uv' },
            { id: 3, name: 'Rock & Pop', genre: '90s to Now', stream: 'https://stream.zeno.fm/vafbmkhu0s8uv' }
        ];

        let activeChannel = null;
        let isPlaying = false;
        let apiKey = '';
        let chatHistory = [];

        const audio = document.getElementById('audioPlayer');
        const player = document.getElementById('player');
        const playPauseBtn = document.getElementById('playPauseBtn');
        const muteBtn = document.getElementById('muteBtn');
        const volumeSlider = document.getElementById('volumeSlider');
        const volumeText = document.getElementById('volumeText');
        const channelBtns = document.querySelectorAll('.channel-btn');
        const currentChannelText = document.getElementById('current-channel');

        const apiInputSection = document.getElementById('apiInputSection');
        const chatSection = document.getElementById('chatSection');
        const apiKeyInput = document.getElementById('apiKeyInput');
        const connectBtn = document.getElementById('connectBtn');
        const chatMessages = document.getElementById('chatMessages');
        const chatInput = document.getElementById('chatInput');
        const sendBtn = document.getElementById('sendBtn');

        // Channel selection
        channelBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                const channelId = parseInt(btn.dataset.channel);
                const channel = channels.find(c => c.id === channelId);

                if (activeChannel?.id === channelId) {
                    togglePlayPause();
                } else {
                    selectChannel(channel, btn);
                }
            });
        });

        function selectChannel(channel, btnElement) {
            activeChannel = channel;
            audio.src = channel.stream;
            audio.play();
            isPlaying = true;

            channelBtns.forEach(b => {
                b.classList.remove('active');
                b.querySelector('.equalizer').classList.add('hidden');
            });

            btnElement.classList.add('active');
            btnElement.querySelector('.equalizer').classList.remove('hidden');

            player.classList.remove('hidden');
            currentChannelText.textContent = `${channel.name} - ${channel.genre}`;
            updatePlayButton();
        }

        function togglePlayPause() {
            if (!activeChannel) return;

            if (isPlaying) {
                audio.pause();
                isPlaying = false;
            } else {
                audio.play();
                isPlaying = true;
            }
            updatePlayButton();
        }

        function updatePlayButton() {
            const icon = playPauseBtn.querySelector('i');
            icon.setAttribute('data-lucide', isPlaying ? 'pause' : 'play');
            lucide.createIcons();
        }

        playPauseBtn.addEventListener('click', togglePlayPause);

        // Volume control
        volumeSlider.addEventListener('input', (e) => {
            const value = e.target.value;
            audio.volume = value / 100;
            volumeText.textContent = `${value}%`;
            updateVolumeIcon(value);
        });

        muteBtn.addEventListener('click', () => {
            if (audio.volume > 0) {
                audio.volume = 0;
                volumeSlider.value = 0;
                volumeText.textContent = '0%';
            } else {
                audio.volume = 0.7;
                volumeSlider.value = 70;
                volumeText.textContent = '70%';
            }
            updateVolumeIcon(volumeSlider.value);
        });

        function updateVolumeIcon(value) {
            const icon = muteBtn.querySelector('i');
            icon.setAttribute('data-lucide', value == 0 ? 'volume-x' : 'volume-2');
            lucide.createIcons();
        }

        // API Key setup
        connectBtn.addEventListener('click', () => {
            apiKey = apiKeyInput.value.trim();
            if (apiKey) {
                apiInputSection.classList.add('hidden');
                chatSection.classList.remove('hidden');
            }
        });

        apiKeyInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                connectBtn.click();
            }
        });

        // Chat functionality
        async function sendMessage() {
            const message = chatInput.value.trim();
            if (!message || !apiKey) return;

            addMessage('user', message);
            chatInput.value = '';
            sendBtn.disabled = true;

            try {
                const response = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/gemini-pro:generateContent?key=${apiKey}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        contents: [{
                            parts: [{
                                text: `You are a fun AI DJ. User is listening to ${activeChannel ? activeChannel.name : 'nothing yet'}. Keep it brief and energetic! User: ${message}`
                            }]
                        }],
                        generationConfig: { temperature: 0.9, maxOutputTokens: 150 }
                    })
                });

                const data = await response.json();
                const reply = data.candidates?.[0]?.content?.parts?.[0]?.text || 'ðŸŽ§ Sorry, having trouble!';
                addMessage('assistant', reply);
            } catch (err) {
                addMessage('assistant', 'ðŸŽ§ Connection issue! Check your API key!');
            } finally {
                sendBtn.disabled = false;
            }
        }

        function addMessage(role, content) {
            const div = document.createElement('div');
            div.className = `message ${role}`;
            div.textContent = content;
            chatMessages.appendChild(div);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        sendBtn.addEventListener('click', sendMessage);
        chatInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });

        // Set initial volume
        audio.volume = 0.7;
    </script>
</body>
</html>
